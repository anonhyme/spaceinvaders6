/** Add css rules here for your application. */
@external "gwt-*";


@def GREEN_TOP_NAV #57a544;
@def SHADOW_INNER rgba(0, 0, 0, 0.26);
@def SHADOW_OUTER rgba(0, 0, 0, 0.22);

/** Example rules used by the template application (remove for your app) */

.materialTop {
    margin-top: auto;
    background-color: #57a544;
    border-radius: 3px;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    padding: 10px 25px;
    text-align: right;
    display: block;
}

.material {
    border-radius: 3px;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    padding: 10px 25px;
    text-align: right;
    display: block;
    transition-duration: 0.5s;
}

